<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <h1>Saved</h1>
        </div>
        <div class="col-xs-6 text-right">
            <div class="btn-group" role="group" >
                <button type="button" class="btn btn-default" data-link="/">Home</button>
                <button type="button" class="btn btn-default" data-link="/articles">Articles</button>
                <button type="button" class="btn btn-default" data-link="/saved">Saved</button>
            </div>
        </div>
    </div>
    {{#each articles}}
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row articleRow">
                <div class="col-xs-11">
                    <h2>{{this.title}}</h2>
                    <p>{{this.summary}}
                        <br>
                        <a href="{{this.link}}">Article Link</a>
                    </p>
                </div>
                <div class="col-sm-1">
                        <button class="btn-danger btn saved" data-id="{{this._id}}" data-click="true">Delete</button>
                        <button class="btn-primary btn note" data-id="{{this._id}}" data-toggle="modal" data-target="#myModal">Add Note</button>
                </div>
            </div>

        </div>
    </div>
    {{/each}}
</div>